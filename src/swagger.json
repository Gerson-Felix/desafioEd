{
    "swagger": "2.0",
    "info": {
        "title": "API de Configuração",
        "description": "Essa API tem como objectivo configurar a documentação com o Swagger",
        "contact": {
            "email": "gerson.01@outlook.pt"
        },
        "version": "1.0.0"
    },
    "tags": [
        {
            "name": "provincias"
        },
        {
            "name": "escola"
        }
    ],
    "paths": {
        "/provincias": {
            "get": {
                "description": "Retorna as Provincias",
                "tags": ["provincias"],
                "parameters": [],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Todas as Provincias",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Nenhuma província Listada. Carrega o ficheiro JSON das províncias usando o POST"
                    },
                    "500": {
                        "description": "Erro do Servidor"
                    }
                }
            },
            "post": {
                "description": "Carrega o JSON das Provincias",
                "tags": ["provincias"],
                "consumes": ["multipart/form-data"],
                "parameters":[
                    {
                        "in": "formData",
                        "name": "file",
                        "type": "file",
                        "description": "JSON das provincias"
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type":"object"
                        }
                    },
                    "400": {
                        "description": "Nenhuma província Listada. Carrega o ficheiro JSON das províncias usando o POST"
                    },
                    "500": {
                        "description": "Erro do Servidor"
                    }
                }
            }
        },
        "/escola": {
            "get": {
                "description": "Retorna todas Escolas",
                "tags": ["escola"],
                "parameters": [],
                "produces": ["application/json"],
                "responses": {
                    "400": {
                        "description": "Nenhuma escola Listada"
                    },
                    "200": {
                        "description": "Todas as Escolas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Inserção da escola atravéz de parâmetros",
                "tags": ["escola"],
                "consumes": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "description": "Parametros da Escola",
                    "required": "true",
                    "schema": {
                        "$ref": "#/components/schemas/Escola"
                    }
                }]
            }
        }
    },
    "components": {
        "schemas": {
            "Escola": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "numSalas": {
                        "type": "number"
                    },
                    "provincia": "string"
                }
            }
        }
    }
}